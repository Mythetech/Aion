<MudStack Row="true" Class="w-100" Justify="Justify.SpaceBetween">
    <MudText Class="mud-text-secondary">
        @Key
    </MudText>
    <MudTooltip Text="@Value">
        <MudText Class="text-truncate">
            @Value
        </MudText>
    </MudTooltip>
</MudStack>

@code {
    [Parameter] public string Key { get; set; } = default!;

    [Parameter] public string Value { get; set; } = default!;
}
@using MudBlazor

<MudLink Class="@($"flex-grow-1 rounded{(IsActive ? " bg-primary-50" : "")}")"
         Color="@(IsActive ? Color.Primary : Color.Default)"
         OnClick="@OnClick">
    @Text
</MudLink>
@code {
    [Parameter]
    public string Text { get; set; } = "";
    
    [Parameter]
    public bool IsActive { get; set; }
    
    [Parameter]
    public EventCallback OnClick { get; set; }
} 